---
interface Props {
    title?:string;
    class?: string;
    [x: string]: any;
}
const defaultClass='default';
const { title, class: className = defaultClass, ...rest } = Astro.props;
---

<details class={className} {...rest}>
    <slot name="title">
        <summary>{title}</summary>
    </slot>
    <slot/>
</details>


<style>
  .default{
      padding: 0.5em 0.5em;
  }
  summary {
      font-weight: 500;
      margin: -0.5em -0.5em;
      padding: 0.5em;
      display: block;
  }
  details[open] {
      background-color: rgba(0, 0, 0, 0.189);
  }
  details[open] summary {
      margin-bottom: 0.5em;
  }
</style>